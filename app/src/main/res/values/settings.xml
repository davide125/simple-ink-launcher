<resources>
    <!-- Reader section -->
    <string name="default_reader_app_key" translatable="false">defaultReaderApp</string>
    <string name="default_reader_app_title">Default application</string>
    <string name="default_reader_app_summary">Select reader application which will be default on this device</string>
    <string name="default_reader_app_default_value" translatable="false">org.koreader.launcher/org.koreader.launcher.MainActivity</string>

    <string name="reader_preference_section">Reader</string>
    <string name="auto_start_reader_app_key" translatable="false">autoStartReaderApp</string>
    <string name="auto_start_reader_app_title">Run on start up</string>
    <bool name="auto_start_reader_app_default_value">false</bool>
    <string name="auto_start_reader_app_summary">Automatically run reader application after device boots up</string>

    <!-- Launcher section -->
    <string name="launcher_preference_section">Launcher</string>
    <string name="hidden_applications_key" translatable="false">hiddenApplications</string>
    <string name="hidden_applications_title">Hide applications</string>
    <string name="hidden_applications_summary">Define applications which will not be visible in the launcher</string>

    <string name="sorting_strategy_key" translatable="false">sortingStrategy</string>
    <string name="sorting_strategy_title">Sort By</string>
    <string name="sorting_strategy_summary">Define how applications will be sorted in the launcher</string>
    <string name="sorting_strategy_default_value" translatable="false">READER_APP_FIRST</string>
    <string name="reader_app_first_label">Reader application first</string>

    <string-array name="sorting_type_labels">
        <item>@string/reader_app_first_label</item>
        <item>A - Z</item>
        <item>Z - A</item>
    </string-array>

    <string-array name="sorting_type_values">
        <item>READER_APP_FIRST</item>
        <item>A_Z</item>
        <item>Z_A</item>
    </string-array>

    <array name="sorting_type_icons">
        <item>@drawable/ic_sort_type_reader_first</item>
        <item>@drawable/ic_sort_type_asc</item>
        <item>@drawable/ic_sort_type_desc</item>
    </array>

    <string name="icons_theme_key" translatable="false">iconsTheme</string>
    <string name="icons_theme_title">Icons theme</string>
    <string name="icons_theme_summary">Define custom icons theme</string>
    <string name="icons_theme_default_label">Default</string>

    <!-- Main screen preferences -->
    <string name="main_screen_preferences_key" translatable="false">mainScreenPreferences</string>
    <string name="main_screen_preferences_title">Main screen</string>
    <string name="main_screen_preferences_summary">Define how applications are presented on the main screen</string>
    <string name="main_screen_preference_section" translatable="false">@string/main_screen_preferences_title</string>

    <string name="main_screen_columns_key" translatable="false">mainScreenColumns</string>
    <string name="main_screen_columns_title">Columns</string>
    <integer name="main_screen_columns_min_value">2</integer>
    <integer name="main_screen_columns_max_value">6</integer>
    <integer name="main_screen_columns_default_value">3</integer>

    <string name="main_screen_icons_size_key" translatable="false">mainScreenIconsSize</string>
    <string name="main_screen_icons_size_title">Icons size</string>
    <integer name="main_screen_icons_size_min_value">24</integer>
    <integer name="main_screen_icons_size_max_value">100</integer>
    <integer name="main_screen_icons_size_default_value">65</integer>

    <!-- Toolbar section -->
    <string name="toolbar_preference_section">Toolbar</string>
    <string name="show_backlight_switch_key" translatable="false">showBacklightSwitch</string>
    <string name="show_backlight_switch_title">Show backlight switch</string>
    <string name="show_backlight_switch_summary">Add backlight switch to launcher toolbar</string>
    <bool name="show_backlight_switch_default_value">false</bool>

    <string name="show_wifi_switch_key" translatable="false">showWifiSwitch</string>
    <string name="show_wifi_switch_title">Show Wi-Fi switch</string>
    <string name="show_wifi_switch_summary">Add Wi-Fi switch to launcher toolbar</string>
    <bool name="show_wifi_switch_default_value">false</bool>

    <string name="toolbar_location_key" translatable="false">toolbarLocation</string>
    <string name="toolbar_location_title">Toolbar location</string>
    <string name="toolbar_location_summary">Define where toolbar will be located on the screen</string>
    <string name="toolbar_location_default_value" translatable="false">BOTTOM</string>
    <string name="toolbar_location_top">Top</string>
    <string name="toolbar_location_bottom">Bottom</string>
    <string name="toolbar_location_hidden">Hidden</string>

    <string-array name="toolbar_location_labels">
        <item>@string/toolbar_location_top</item>
        <item>@string/toolbar_location_bottom</item>
        <item>@string/toolbar_location_hidden</item>
    </string-array>

    <string-array name="toolbar_location_values">
        <item>TOP</item>
        <item>BOTTOM</item>
        <item>HIDDEN</item>
    </string-array>

    <array name="toolbar_location_icons">
        <item>@drawable/ic_toolbar_location_top</item>
        <item>@drawable/ic_toolbar_location_bottom</item>
        <item>@drawable/ic_toolbar_location_hidden</item>
    </array>
</resources>