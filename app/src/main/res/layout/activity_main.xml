<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/launcher_layout_id"
    tools:context="org.ds.simple.ink.launcher.LauncherMainActivity">

    <org.ds.simple.ink.launcher.drawer.ApplicationDrawer
        android:id="@+id/apps_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        tools:ignore="MissingConstraints"
        />

    <org.ds.simple.ink.launcher.toolbar.ApplicationDrawerToolbar
        android:id="@+id/app_drawer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@drawable/app_drawer_toolbar_bg"
        app:layout_constraintHeight_max="55dp"
        app:layout_constraintHeight_min="55dp"
        tools:ignore="MissingConstraints"
        />

</androidx.constraintlayout.widget.ConstraintLayout>